@import 'variable.styl';

body, html {
	line-height: 1;
	font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
	user-select: none;
	-webkit-tap-highlight-color: transparent;
	background: $color-background;
	color: $color-text-p;
	height: 100%;
}

#app {
	min-width: 1100px;
}

/* ---- particles.js container ---- */
#particles-js {
	position: absolute;
	width: 100%;
	height: 100%;
	background-color: lightslategrey;
	background-image: url('../img/bg.jpg');
	background-repeat: no-repeat;
	background-size: cover;
	background-position: 50% 50%;
	overflow: hidden;
}

// 阿里图标
.iconfont {
	margin-right: 5px;
	width: 24px;
	text-align: center;
	font-size: 22px;
	vertical-align: middle;
}

// Element tips
.el-tooltip__popper {
	max-width: 700px;
}

// Element 图片上传
.avatar-uploader .el-upload {
	border: 1px dashed #d9d9d9;
	border-radius: 6px;
	cursor: pointer;
	position: relative;
	overflow: hidden;
}

.avatar-uploader .el-upload:hover {
	border-color: #409EFF;
}

.avatar-uploader-icon {
	font-size: 28px;
	color: #8c939d;
	width: 183px;
	height: 298px;
	line-height: 298px;
	text-align: center;
}

.avatar {
	width: 183px;
	height: 298px;
	display: block;
}

.el-header {
	padding: 0px;

	.el-menu {
		padding-left: 250px;
		padding-right: 50px;
	}

	.el-menu--horizontal>.el-submenu .el-submenu__icon-arrow {
		color: #ffffff;
	}
}

.el-aside {
	height: 100%;
	width: auto !important;
	max-width: 300px !important;

	.aside {
		height: 100%;
		position: relative;

		.el-menu-vertical-demo {
			height: 100%;
		}

		.el-menu-vertical-demo:not(.el-menu--collapse) {
			width: 200px;
		}

		.menu-collapse {
			position: absolute;
			bottom: 5px;
			right: 12px;

			.iconfont {
				font-size: 32px;
				color: $color-text-f;
			}
		}
	}

	.el-menu-vertical-demo:not(.el-menu--collapse) {
		height: 100%;
	}
}

// 子页面
.el-container.sub-page {
	height: 100%;
	background: $color-background-main;

	.el-scrollbar__wrap {
		overflow-x: hidden;
	}

	.el-header {
		height: auto !important;
		border-bottom: 1px solid $color-border-p;
	}

	.el-main {
		padding: 20px;
	}

	.el-footer {
		border-top: 1px solid $color-border-p;
		display: flex;
		flex-flow: column;
		justify-content: center;

		.sub-footer {
			display: flex;
			flex-flow: row;
			justify-content: space-between;
			align-items: center;
		}
	}
}

// 日志管理
.comment-manage {
	.el-table .cell {
		display: flex;
	}
}

// 添加游戏
.sub-page.add-game {
	.sub-header {
		padding: 20px !important;
	}
}

// 关于我们
.sub-page.about-us {
	.sub-header {
		padding: 20px !important;
	}
}
